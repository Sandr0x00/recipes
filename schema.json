{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "id": "/All",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "required": true,
            "minLength": 3
        },
        "name": {
            "type": "string",
            "required": true,
            "minLength": 3
        },
        "headless": {
            "type": "boolean"
        },
        "portions": {
            "type": "string",
            "pattern": "^[0-9].*"
        },
        "images": {
            "type": "array",
            "required": true,
            "uniqueItems": true
        },
        "tags": {
            "type": "array",
            "required": true,
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "string",
                "pattern": "^[a-z-]+$",
                "required": true,
                "minLength": 2
            }
        },
        "ingredients": {
            "type": "object",
            "required": true,
            "minProperties": 1,
            "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "amount": {
                        "type": "string",
                        "pattern": "^([0-9]+(g|ml| TL| EL| Pkg.)|\\+)?"
                    },
                    "name": {
                        "type": "string",
                        "required": true,
                        "minLength": 2
                    },
                    "link": {
                        "type": "string"
                    }
                }
            }
        },
        "preparation": {
            "required": true,
                "type": "array",
                "uniqueItems": true,
                "minItems": 1,
                "items": {
                    "type": "string",
                    "required": true,
                    "minLength": 2
                }
        },
        "garnish": {
            "type": "string",
            "required": false
        },
        "utensils": {
            "type": "string",
            "required": false
        },
        "link": {
            "type": "array"
        },
        "original": {
            "type": "string",
            "required": false
        }
    }
}